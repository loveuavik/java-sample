pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh label: '', script: 'mvn package'
            }
        }
        stage("SonarQube analysis") {
            agent any
            steps {
              withSonarQubeEnv('sonar') {
                sh 'mvn sonar:sonar -Dsonar.host.url=http://localhost:9000'
              }
            }
          }
       
        stage('Deploy') {
            steps {
                sh label: '', script: 'mvn clean deploy'
            }
        }
    }
}
